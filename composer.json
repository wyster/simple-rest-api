{
  "name": "wyster/simple-rest-api",
  "description": "Simple REST API based on PHP 7.4, middleware and other PSRs",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-intl": "*",
    "ext-json": "*",
    "zendframework/zend-stratigility": "~3.2",
    "zendframework/zend-diactoros": "~2.2",
    "zendframework/zend-httphandlerrunner": "~1.1",
    "middlewares/fast-route": "~2.0",
    "php-di/php-di": "~6.0",
    "vlucas/phpdotenv": "~3.6",
    "zendframework/zend-db": "~2.10",
    "zendframework/zend-hydrator": "~3.0",
    "myclabs/php-enum": "~1.7",
    "moneyphp/money": "~3.2",
    "zendframework/zend-eventmanager": "~3.2",
    "middlewares/payload": "~3.0",
    "zendframework/zend-problem-details": "~1.0",
    "zendframework/zend-authentication": "~2.7",
    "php-http/curl-client": "~2.0",
    "php-http/message": "~1.8",
    "php-http/guzzle6-adapter": "~2.0",
    "zendframework/zend-servicemanager": "~3.4",
    "zendframework/zend-validator": "~2.12"
  },
  "require-dev": {
    "codeception/codeception": "~3.1",
    "friendsofphp/php-cs-fixer": "~2.15",
    "fzaninotto/faker": "~1.8",
    "mockery/mockery": "~1.2",
    "phpro/grumphp": "~0.17",
    "robmorgan/phinx": "~0.10.0",
    "sensiolabs/security-checker": "~6.0",
    "wearejust/grumphp-extra-tasks": "~2.2",
    "symfony/psr-http-message-bridge": "~1.3",
    "php-coveralls/php-coveralls": "~2.2",
    "phpstan/phpstan": "~0.12.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cp -n ./.env.example ./.env"
    ],
    "grumphp": [
      "cd .docker/tests && make up"
    ]
  }
}
